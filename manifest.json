{
  "browser_specific_settings": {
    "gecko": {
      "id": "@letterboxd_plus"
    }
  },

  "version": "0.321",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "permissions": [
    "webNavigation",
    "storage"
  ],

  "default_locale": "en",
  "name": "letterboxd+",
  "description": "random button, rating from other platforms",

  "content_scripts": [
    {
      "matches": [
        "*://*.letterboxd.com/*/list/*",
        "*://*.letterboxd.com/*/watchlist/*"
      ],
      "js": [
        "/utils.js", "/modules/random.js"
      ]
    }
  ],

  "web_accessible_resources": [""],

  "manifest_version": 2,
  "icons": {
    "64": "icon.png"
  },

  "browser_action": {
    "default_icon": {
      "64": "icon.png"
    },
    "default_popup": "options/options.html"
  }
}
