{
    "browser_specific_settings": {
      "gecko": {
        "id": "@letterboxd_plus"
      }
    },

    "default_locale": "en",
    "name": "letterboxd+",
    "description": "Random button for movie lists and no more!",

    "content_scripts": [
        {
        "matches": ["*://*.letterboxd.com/*/list/*", "*://*.letterboxd.com/*/watchlist/*"],
        "js": ["/Modules/randomBtn.js"]
        }
    ],

    "manifest_version": 2,
  
    "icons": {
      "64": "icon.png"
    },
 
    "page_action": {
      "default_icon": {
        "64": "icon.png"
      },
      "default_title": "Whereami?",
      "default_popup": "popup/geo.html"
    },
  
    "permissions": ["webNavigation", "tabs"],
  
    "version": "0.16",
  
    "web_accessible_resources": ["images/my-image.png"]
  }
