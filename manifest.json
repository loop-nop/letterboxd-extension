{
    "browser_specific_settings": {
      "gecko": {
        "id": "letterboxd_plus@nn",
        "strict_min_version": "42.0"
      }
    },

    "manifest_version": 2,
    "default_locale": "en",
    "name": "letterboxd+",
    "description": "Random button for movie lists and not more!",

    "content_scripts": [
        {
        "matches": ["*://*.letterboxd.com/*/list/*"],
        "js": ["main.js"]
        }
    ],

    "content_security_policy": "object-src 'self'; script-src 'self' https://*.ltrbxd.com",
  
    "icons": {
      "48": "icon.png",
      "96": "icon.png"
    },
  
    "background": {
    "scripts": ["background.js"]
    },
  
    "page_action": {
      "default_icon": {
        "19": "icon.png",
        "38": "icon.png"
      },
      "default_title": "Whereami?",
      "default_popup": "popup/geo.html"
    },
  
    "permissions": ["webNavigation", "tabs"],
  
    "version": "0.1",
  
    "web_accessible_resources": ["images/my-image.png"]
  }